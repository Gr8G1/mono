{
  "name": "mono",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "add": "node tools/scripts/add.js",
    "dev": "node tools/scripts/dev.js",
    "dev:turbo": "turbo run dev",
    "build": "node tools/scripts/build.js",
    "build:turbo": "turbo run build",
    "build:dry": "node tools/scripts/build.js --dry-run",
    "create:branch": "sh tools/shells/cli/create-branch.sh",
    "create:package": "sh tools/shells/cli/create-package.sh",
    "app:version": "node tools/scripts/version.js",
    "app:deploy": "node tools/scripts/deploy.js",
    "app:update": "node tools/scripts/update.js",
    "inject-deps": "node tools/scripts/inject-deps.js",
    "sync-refs": "node tools/scripts/sync-ts-references.js",
    "update-refs": "node tools/scripts/update-refs.js",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "prepare": "husky install",
    "clean": "pnpm -w exec turbo daemon clean && pnpm -w exec rimraf -g .turbo dist node_modules \"**/tsconfig.*.tsbuildinfo\"",
    "clean:watchman": "watchman watch-del-all",
    "clean:turbo": "pnpm turbo daemon clean",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{css,scss,sass}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-react-app": "^7.0.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "husky": "^8.0.0",
    "inquirer": "^12.7.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "semver": "^7.5.4",
    "simple-plist": "^1.3.0",
    "turbo": "^2.5.4",
    "typescript": "^5.3.3"
  }
}
